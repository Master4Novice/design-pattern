{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-filename-extension": [1, {"extensions": [".js", ".jsx", ".tsx"]}],
        "space-before-function-paren":"error",
        "prettier/prettier": ["error", {"printWidth": 80, "tabWidth": 2, "endOfLine": "auto", "semi": true,"singleQuote": true, "bracketSpacing": true}]
    }
}
